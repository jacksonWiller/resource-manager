{
  "name": "resource-manager",
  "version": "1.0.0",
  "description": "Serverless aws-nodejs-typescript boilerplate",
  "main": "serverless.yml",
  "type": "module",
  "scripts": {
    "start": "serverless offline --httpPort=4000",
    "deploy:staging": "serverless deploy --aws-profile personal --stage staging",
    "deploy:production": "serverless deploy --aws-profile personal --stage production",
    "deploy:local": "serverless deploy --stage local",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch --coverage",
    "lint": "eslint '*/**/*.{js,ts}'",
    "prettier": "prettier --write '*/**/*.{js,ts}'",
    "docs": "redoc-cli serve docs/openapi/openapi.yml",
    "docs:watch": "redoc-cli serve docs/openapi/openapi.yml --watch"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.716.0",
    "@aws-sdk/lib-dynamodb": "^3.716.0",
    "@middy/http-json-body-parser": "^1.5.0",
    "aws-lambda": "^1.0.7",
    "source-map-support": "^0.5.19",
    "uuid": "^11.0.3"
  },
  "devDependencies": {
    "@middy/core": "^6.0.0",
    "@serverless/typescript": "^3.21.0",
    "@types/aws-lambda": "^8.10.146",
    "@types/jest": "^26.0.20",
    "@types/lodash": "^4.17.13",
    "@types/node": "^14.14.6",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^4.13.0",
    "@typescript-eslint/parser": "^4.13.0",
    "aws-sdk": "^2.1692.0",
    "esbuild": "^0.24.2",
    "eslint": "^7.17.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^7.1.0",
    "eslint-import-resolver-typescript": "^2.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "json-schema-to-ts": "^1.4.1",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "redoc-cli": "^0.13.2",
    "serverless": "3.39.0",
    "serverless-offline": "^6.8.0",
    "serverless-plugin-typescript": "^2.1.5",
    "ts-jest": "^26.4.4",
    "ts-loader": "^8.0.10",
    "ts-node": "^9.1.1",
    "typescript": "^4.0.5"
  },
  "author": "Jackson Duarte"
}
