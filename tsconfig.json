{
  "compilerOptions": {
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "ES2020",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@functions/*": ["src/functions/*"],
      "@resources/*": ["src/resources/*"],
      "@utils/*": ["src/utils/*"],
      "@database/*": ["src/database/*"],
      "@models/*": ["src/models/*"],
      "@tests/*": ["src/tests/*"]
    }
  }
}
